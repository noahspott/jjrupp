---
// Components
import { Image } from "astro:assets";

// Images
import background from "@/assets/images/background.png";

const { className } = Astro.props;
---

<div class={`h-dvh w-full ${className}`}>
  <Image
    src={background}
    class={`object-cover h-full w-full opacity-20`}
    alt=""
    loading="eager"
  />
</div>
