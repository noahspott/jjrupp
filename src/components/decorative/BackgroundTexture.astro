---
// Components
import { Image } from "astro:assets";

// Images
import background from "@/assets/images/textures/texture-4-1920px.jpg";

const { className } = Astro.props;
---

<div class={`h-dvh w-full -z-10 ${className}`}>
  <div class="relative h-full w-full">
    <div class={`absolute inset-0 bg-secondary`}></div>
    <Image
      src={background}
      class="h-full w-full object-cover opacity-10"
      alt=""
      loading="eager"
      format="webp"
      widths={[640, 960, 1280, 1600, 1920]}
      sizes="100vw"
      quality={75}
    />
  </div>
</div>
