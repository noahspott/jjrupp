---
// Components
import { Image } from "astro:assets";

// Types
import type { ImageMetadata } from "astro";
type SubpageContentProps = {
  src: ImageMetadata;
  alt?: string;
};

const { src, alt = "" } = Astro.props as SubpageContentProps;
---

<main class="flex flex-col lg:flex-row lg:gap-4">
  <div class="flex lg:flex-1">
    <div class="hidden lg:block lg:flex-grow"></div>
    <div class="w-full max-w-[640px]">
      <slot />
    </div>
  </div>
  <div
    class="top-0 order-first flex h-80 flex-shrink p-4 lg:sticky lg:order-last lg:h-screen lg:flex-1"
  >
    <div
      class="bg-primary w-full overflow-clip rounded-2xl lg:h-full lg:max-w-[1000px]"
    >
      <Image
        src={src}
        alt={alt}
        class="h-full w-full object-cover opacity-70"
        loading="eager"
      />
    </div>
  </div>
</main>
