---
// Components
import { Image } from "astro:assets";
import { Section, Content } from "@/components/shared";

// Types
import type { ImageMetadata } from "astro";
type SubpageContentProps = {
  src: ImageMetadata;
  alt?: string;
};

const { src, alt = "" } = Astro.props as SubpageContentProps;
---

<main class="flex flex-col lg:flex-row">
  <div class="flex lg:flex-1">
    <div class="hidden lg:block lg:flex-grow"></div>
    <div class="max-w-[640px]">
      <slot />
    </div>
  </div>
  <div
    class="top-0 order-first flex h-80 flex-shrink lg:sticky lg:order-last lg:h-screen lg:flex-1"
  >
    <div class="bg-primary w-full lg:h-full">
      <Image
        src={src}
        alt={alt}
        class="h-full w-full object-cover opacity-70"
      />
    </div>
  </div>
</main>
