---
// Components
import { Section, Content, Link } from "@/components/shared";
import { EventCard } from "@/components/schedule";

// Data
import { events } from "@/data/events";

console.log(events);

const { className } = Astro.props as { className: string };
---

<Section>
  <Content>
    <div class="flex flex-col gap-16">
      <h2 class="font-heading heading-1 text-primary">Upcoming Shows</h2>
      <ul class="flex flex-col gap-4">
        {
          events.map((event) => (
            <li>
              <EventCard event={event} />
            </li>
          ))
        }
      </ul>
      <Link
        href="/schedule"
        className="self-end"
        styleType="link"
        variant="primary">See Full Schedule</Link
      >
    </div>
  </Content>
</Section>
