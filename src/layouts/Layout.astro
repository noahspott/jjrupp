---
// Styles
import "@/styles/global.css";

// Components
import {
  Seo,
  Favicon,
  FontPreloaders,
  ThemeMeta,
  OpenGraph,
} from "@/components/common";
import { BackgroundTexture } from "@/components/decorative";
import { Header, Footer } from "@/components/layout";

// Types
import type { SeoMeta } from "@/data/seo";
import PageTransition from "@/components/layout/PageTransition";

const { seo, headerClassName = "bg-primary" } = Astro.props as {
  seo: SeoMeta;
  headerClassName: string;
};
---

<!doctype html>
<html lang="en">
  <head>
    <Seo {...seo} />
    <Favicon />
    <OpenGraph />
    <FontPreloaders />
    <ThemeMeta color={`#1e0f09`} />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class="bg-primary text-primary font-body relative">
    <BackgroundTexture className="fixed" />
    <PageTransition client:load />
    <Header className={headerClassName} />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    overscroll-behavior: none;
    min-width: 320px;
    width: 100%;
    margin: 0 auto;
  }
</style>
